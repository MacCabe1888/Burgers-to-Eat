<header>
  <h1>Burgers to Eat</h1>
</header>

<div class="container">

  <div id="burgers">

    <section id="to-eat">

      <h2>Burgers to Eat</h2>

      <ol>
        {{#each burgers}}
          {{#unless devoured}}
            <div class="list-row">
              <li class="burger-name">
                {{burger_name}}
              </li>
              <div class="buttons">
                <button class="eat" data-id="{{id}}">
                  <i class="fas fa-hamburger"></i> BURGER TIME!
                </button>
                <button class="delete" data-id="{{this.id}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </div>
          {{/unless}}
        {{/each}}
      </ol>

    </section>

    <section id="eaten">

      <h2>Burgers Eaten</h2>

      <ol>
        {{#each burgers}}
          {{#if devoured}}
            <div class="list-row">
              <li class="burger-name">
                {{burger_name}} (Yummy! :P)
              </li>
              <div class="buttons">
                <button class="delete" data-id="{{this.id}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </ol>

    </section>

  </div>

  <div id="add-burger">
    <div id="add-burger-content">

      <h2>Add a Burger</h2>

      <form class="create-burger">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger_name" name="burger_name">
        </div>

        <button id="add" type="submit">
          ADD <i class="fas fa-hamburger"></i>
        </button>

      </form>

    </div>
  </div>

</div>
